# Environment Variables Example
# Copy this file to .env and fill in with your actual credentials

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here

# Upstage Configuration
UPSTAGE_API_KEY=your_upstage_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_pinecone_index_name

# LangSmith Configuration (Optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=your_langchain_project_name

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-1

# DynamoDB Configuration
LINKEDIN_DYNAMODB_TABLE=linkedin_profiles
TAMAGO_DYNAMODB_TABLE=tamago_profiles

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Pinecone Configuration
PINECONE_ENVIRONMENT=your_pinecone_environment

# Embedding Configuration
EMBEDDING_MODEL=openai  # Options: openai, cohere
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
COHERE_EMBEDDING_MODEL=embed-english-v3.0

# Retrieval Configuration
RERANK_MODEL=rerank-english-v3.0  # Cohere reranking model to use

# Profile Aggregation Configuration
PROFILE_BONUS_ALPHA=0.05  # Bonus factor for additional chunks above threshold
PROFILE_SCORE_THRESHOLD=0.70  # Threshold for counting chunks in bonus calculation
TOP_K_PROFILES=20  # Number of top profiles to display after aggregation
MIN_PROFILE_SCORE=0.80  # Minimum score (final or best chunk) to include a profile in results

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.0 